<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp">


        <ImageView
            android:id="@+id/img"
            android:layout_width="154dp"
            android:layout_height="166dp"
            android:layout_marginLeft="13dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nma_st"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="-13dp"
            android:gravity="center"
            android:shadowColor="@color/teal_200"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="2"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="4dp"
            android:isIndicator="true"
            android:numStars="3"
            android:stepSize="0.1" />

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="130dp"
            android:layout_alignEnd="@id/img"
            android:layout_marginEnd="-214dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="-62dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aff_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/att_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/deff_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="130dp"
            android:layout_alignEnd="@id/img"
            android:layout_marginEnd="-95dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="-62dp"
                android:text="Name : "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Affiliation : "
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attack : "
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deffend :"
                android:textColor="#000000" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>